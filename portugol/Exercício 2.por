programa {
  funcao inicio() {
    real n1, n2, soma, sub, mult, div

    escreva("Digite o primeiro número: ")
    leia(n1)

    escreva("Digite o segundo número: ")
    leia(n2)
    soma = n1+n2
    sub = n1-n2
    mult = n1*n2
    div = n1/n2
    
    escreva("Os resultados são: ","\n da Soma: ",soma, "\n Da subtração: ",sub,"\n Da Multiplicação: ",mult,"\n Da Divisão: ",div)

  }
}
